<!-- //////////////////orders Page/////////////////////////// -->
<div id="orderDetails">
    <!-- Slider Starts -->
    <div class="banner">
        <img src="assets/images/back.jpg" alt="banner" class="img-responsive">
        <div class="caption">
            <div class="caption-wrapper">
                <div class="caption-info">
                  <div class="wrapper row3">
                    <main class="hoc container clear">
                      <div class="content" style="margin-bottom:165px;">
                        <h1 style="color: navajowhite;">Order details</h1>
                        <div class="scrollable">
                          <table>
                            <thead>
                              <tr>
                                <th>Person</th>
                                <th>Item</th>
                                <th>Amount</th>
                                <th>Price</th>
                                <th>Comment</th>
                              </tr>
                            </thead>
                            <tbody id="orderDatailsTable">

                            </tbody>
                          </table>
                        </div>

                        <div class="itemDetails">
                          <table id="AddNewItemTable">
                            <thead>
                              <tr>
                                <th style="width:250px;">Itemmm</th>
                                <th style="width: 60px;">Amount</th>
                                <th style="width: 60px;">Price</th>
                                <th>Comment</th>
                              </tr>
                            </thead>
                            <tbody>
                              <tr>
                                <td><input type="text" id="itemName" style="width:250px;" required ></td>
                                <td><input type="number" min="1" id="itemAmount" style="width: 60px;" required ></td>
                                <td><input type="number" min="1" id="itemPrice" style="width: 60px;" required ></td>
                                <td> <input type="text" id="itemComment" style="width: 505px;"></td>
                              </tr>
                            </tbody>
                          </table>
                          <input type="button" value="add" id="addItemBtn" class="btn">
                        </div>
                      </div>
                      <div class="clear"></div>
                    </main>
                  </div>

            </div>
        </div>
      </div>
    </div>
</div>
<script>
$("#orderDatailsTable").html("")
console.log($("#orderDatailsTable").html());
$("#orderDatailsTable").html(localStorage.orderDetailsList)
if(localStorage.orderStatus=="finished"){
    $('#AddNewItemTable').hide()
    $('#addItemBtn').hide()
}
</script>




