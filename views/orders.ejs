<!-- //////////////////orders Page/////////////////////////// -->
<div id="orders">
    <!-- Slider Starts -->
    <div class="banner">
        <img src="assets/images/back.jpg" alt="banner" class="img-responsive">
        <div class="caption">
            <div class="caption-wrapper">
                <div class="caption-info">

                  <div class="wrapper row3">
                    <main class="hoc container clear">
                      <div class="content" style="margin-bottom: 210px;">
                        <h1 style="color: navajowhite;">Orders</h1>
                        <a class="btn" href="#" style="float: right; margin-top: -57px;" id="addOrderBtn">Start New Order !! &raquo;</a>
                        <div class="scrollable">
                          <table>
                            <thead>
                              <tr>
                                <th style="display: -moz-popup;">IDID</th>
                                <th>Order</th>
                                <th>Restaurants</th>
                                <th>Invited</th>
                                <th>Joined</th>
                                <th>Status </th>
                                <th>Actions</th>

                              </tr>
                            </thead>
                            <tbody id="orderTable">
                              <%for(var i=0;i<testList.length;i++){%>
                                  <tr>
                                    <% var orderID=testList[i]._id%>
                                    <td style="display: -moz-popup;" id="orderID"><%=testList[i]._id%></td>
                                    <td><%=testList[i].type%></td>
                                    <td><%=testList[i].from%></td>
                                    <td><%=testList[i].invited%></td>
                                    <td><%=testList[i].joined%></td>
                                    <td><%=testList[i].status%></td>
                                    <%if(testList[i].ownerEmail==owneerEmail){%>
                                        <%if(testList[i].status=="finished"){%>
                                            <td id="<%=testList[i].status%>"><a id="<%=testList[i]._id%>" class="view" >View</a><a href="#" class="<%=testList[i]._id%>" id="cancel">Cancel</a></td>
                                        <%}else{%>
                                            <td id="<%=testList[i].status%>"><a id="<%=testList[i]._id%>" class="view" >View</a><a href="#" class="<%=testList[i]._id%>" id="finish" style="padding:5px">Finish</a><a href="#" class="<%=testList[i]._id%>" id="cancel">Cancel</a></td>
                                        <%}%>
                                    <%}else{%>
                                      <td  id="<%=testList[i].status%>" ><a id="<%=testList[i]._id%>" class="view" >View</a></td>
                                      <%}%>
                                  </tr>
                               <%}%>
                            </tbody>
                          </table>
                        </div>
                      </div>
                      <div class="clear"></div>
                    </main>
                  </div>
            </div>
        </div>
      </div>
    </div>

</div>

<!-- zaynab -->

<div id="orderModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
    <span class="close">&times;</span>
    <div class="wrapper row3">
      <main class="hoc container clear">
        <div class="content">
          <h2 style="margin-top: -75px;" class="heading">Add Orders</h2>
          <form role="form" style="margin-top: -10px;">
            <div class="order-form">
              <label>your Friends or group </label>
              <input type="text" id="invitedEmail" placeholder="Enter your Friends Or Group Name" class="input" required="true">
              <p id="invitedMembersError"></p>
            </div>
            <div class="order-form">
              <button id="addMemberBtn" class="btn btn-primary" style="width:12%; margin-top:5px"><i class="fa fa-paper-plane"></i> Add </button>
            </div>
          </form>
          <form role="form" style="margin-top: -10px;">
              <div class="order-form">
                <label>order for</label>
                  <select id="orderFor">
                      <option value="lunch">Lunch</option>
                      <option value="breackfast">Breackfast</option>
                  </select>
              </div>
            <div class="order-form">
              <label>From</label>
              <input id="addOrderFromInput" type="text" placeholder="Restaurant Name" class="input" required="true">
            </div>
            <div class="order-form">
              <label>Menu Image</label>
              <input type="file" class="input" style="margin-top: 5px;" required="true">
              <button id="publishOrderBtn" class="btn btn-primary" style="width:12%; margin-top:5px"><i class="fa fa-paper-plane"></i> Publish </button>
            </div>
          </form>
                  <div class="menuImage">
                  </div>
                  <div class="one_half">
                    <ul class="nospace group services" id="invitedMembers">
                    </ul>
                  </div>
                </div>
              </div>
            </div>

          </div>


        </div>
      <div class="clear"></div>
    </main>
  </div>
</div>
</div>


<script>
var modal = document.getElementById('orderModal');
var btn = document.getElementById("addOrderBtn");
var span = document.getElementsByClassName("close")[0];

btn.onclick = function() {
    modal.style.display = "block";
}
$(document).on('click','.close',function(){
    modal.style.display = "none";
});
window.onclick = function(event) {
    if (event.target == modal) {
        modal.style.display = "none";
    }
}
</script>

